<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QuickTransfer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/primary_color"
        android:padding="16dp" />

    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:inputType="phone" />

    <EditText
        android:id="@+id/amountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/transferButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer Amount"
        android:drawableStart="@drawable/ic_transfer"
    android:background="@color/button_color"
    android:textColor="@android:color/white"
    android:padding="12dp"
    android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/infoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display User Info"
        android:drawableStart="@drawable/ic_info"
      android:background="@color/button_color"
       android:textColor="@android:color/white"
      android:padding="12dp"
      android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/transactionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Transactions"
        android:drawableStart="@drawable/ic_transactions"
    android:background="@color/button_color"
    android:textColor="@android:color/white"
    android:padding="12dp"
    android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textColor="@color/output_text_color" />
</LinearLayout>
